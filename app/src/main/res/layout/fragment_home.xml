<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">


    <ImageView
        android:id="@+id/backgroundhome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen200"
        android:background="@color/colorPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgprofile"
        android:layout_width="@dimen/dimen80"
        android:layout_height="@dimen/dimen80"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen50"
        android:src="@drawable/yoga" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_toRightOf="@id/imgprofile"
        android:layout_marginTop="@dimen/dimen56"
        android:fontFamily="@font/amethysta"
        android:text="@string/namaku"
        android:textAlignment="center"
        android:textColor="@color/bgtextwalkthrought1"
        android:textSize="@dimen/dimen18" />

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_below="@+id/backgroundhome"
        android:text="Deskripsi"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font20"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/deskripsiku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deskripsi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amethysta"
        android:text="@string/deskripsidiri"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_below="@+id/deskripsiku"
        android:text="Interest"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font20"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen200"
        android:layout_below="@+id/interest"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-44dp"
        android:background="@drawable/myinterest" />


</RelativeLayout>